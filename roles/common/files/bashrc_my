alias la='ls -A'
alias l='ls -CF'

alias kbuild='sudo make -j4 && sudo make modules_install -j4 && sudo make install -j4'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
