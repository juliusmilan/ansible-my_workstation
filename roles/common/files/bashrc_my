alias f='find . -name '
alias fc='find . -name "*.[ch]" | xargs grep -F '
alias fcp='find . -name "*.cpp" | xargs grep -F '
alias fs='find . -name "*.[sS]" | xargs grep -F '
alias fm='find . -name "Makefile*" | xargs grep -F '
alias fp='find . -name "*.py" | xargs grep -F '
alias g='grep -r '
